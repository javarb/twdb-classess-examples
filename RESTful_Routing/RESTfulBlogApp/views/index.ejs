<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item"> 
                
                    <!--Restrict the size of the images for not to be huge-->
                    <div class="image">
                        <img src=" <%= blog.image %> ">    
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <!--meta is the place to put information of this paticular item-->
                        <div class="meta">
                            <span> <%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <!--If we want to render HTML code here, use '-' instead '=' -->        
                            <p><%- blog.body.substring(0,100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">
                            Read More
                            <i class="right chevron icon"></i>
                            </a>    
                        </div> 
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>




<% include ./partials/footer %>
